{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@grovebox/ai-contracts": ["../../packages/ai-contracts/src/index.ts"],
      "@grovebox/ai-contracts/*": ["../../packages/ai-contracts/src/*"],
      "@grovebox/scene-ops": ["../../packages/scene-ops/src/index.ts"],
      "@grovebox/scene-ops/*": ["../../packages/scene-ops/src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/server.ts"]
}

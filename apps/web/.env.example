# --- Database ---
# Required for Prisma / app data
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require
# Optional: direct connection (no pgbouncer)
DATABASE_URL_UNPOOLED=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Optional: Vercel Postgres template variables
PGHOST=YOUR_PG_HOST
PGHOST_UNPOOLED=YOUR_PG_HOST_UNPOOLED
PGUSER=YOUR_PG_USER
PGDATABASE=YOUR_PG_DATABASE
PGPASSWORD=YOUR_PG_PASSWORD
POSTGRES_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require
POSTGRES_USER=YOUR_PG_USER
POSTGRES_HOST=YOUR_PG_HOST
POSTGRES_PASSWORD=YOUR_PG_PASSWORD
POSTGRES_DATABASE=YOUR_PG_DATABASE
POSTGRES_URL_NO_SSL=postgresql://USER:PASSWORD@HOST:5432/DBNAME
POSTGRES_PRISMA_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?connect_timeout=15&sslmode=require

# --- Clerk Auth ---
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# --- Vercel Blob ---
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# --- Collab (client) ---
# URL of the collab websocket service
NEXT_PUBLIC_COLLAB_SERVER_URL=http://localhost:4001

# --- Collab service (apps/collab) ---
# Allowed origins for socket.io CORS (comma-separated)
COLLAB_ALLOWED_ORIGINS=http://localhost:3000
# Optional (required if running multiple collab instances)
COLLAB_REDIS_URL=redis://:password@host:6379/0
# Optional payload size cap (bytes)
COLLAB_MAX_PAYLOAD_BYTES=1000000

# --- Optional app tuning ---
SYNC_FULL_SCENE_INTERVAL_MS=20000
